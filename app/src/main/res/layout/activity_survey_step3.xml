                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:id="@+id/rec_pics"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Camera"
                        android:textSize="16sp">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_camera"></ImageView>
                    <Button
                        android:id="@+id/pic_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#039be5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Upload"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rec_pics"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:id="@+id/rec_oldpics"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gallery"
                        android:textSize="16sp">
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@android:drawable/ic_menu_camera"></ImageView>
                    <Button
                        android:id="@+id/picstep3_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#039be5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Upload"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </Button>
                </LinearLayout>

                <GridView
                    android:id="@+id/gvstep3"
                    android:layout_below="@+id/rec_oldpics"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="80dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:numColumns="auto_fit"
                    android:padding="10dp"
                    android:stretchMode="columnWidth"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="outsideOverlay"
                    android:verticalSpacing="10dp">
                </GridView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/gvstep3"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/exact_location"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Exact Location"
                        android:id="@+id/exact_location_step3"
                        android:layout_height="wrap_content">
                    </EditText>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exact_location"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lat_lng"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/lat_step3"
                        android:hint="Latitude">
                    </EditText>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/long_step3"
                        android:hint="Longitude">
                    </EditText>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/lat_lng"
                    android:id="@+id/remarks"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="Remark"
                        android:id="@+id/remark_step3"
                        android:layout_height="wrap_content">
                    </EditText>
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:background="@drawable/button_config"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:textColor="@color/btntextcolor"
                android:textStyle="bold"
                android:id="@+id/next3step_btn">
            </Button>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>